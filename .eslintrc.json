{
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true
  },
  "extends": ["eslint:recommended", "plugin:react/recommended", "plugin:jsx-a11y/recommended"],
  "globals": {
    "__dirname": false,
    "graphql": false,
    "process": false,
    "TimelineMax": false,
    "TweenMax": false
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true,
      "jsx": true,
      "impliedStrict": true,
      "classes": true
    },
    "sourceType": "module"
  },
  "plugins": ["compat", "jsx-a11y", "react"],
  "rules": {
    "compat/compat": "error",
    "eqeqeq": ["error", "smart"],
    "indent": ["error", 2],
    "linebreak-style": ["error", "unix"],
    "no-control-regex": "off",
    "quotes": ["error", "backtick"],
    "react/no-unescaped-entities": ["error", { "forbid": [">", "}"] }],
    "react/prop-types": 0,
    "semi": ["error", "never"]
  },
  "settings": {
    "polyfills": ["fetch", "promises"]
  }
}
